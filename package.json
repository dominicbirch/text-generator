{
  "name": "text-generator",
  "version": "1.0.0",
  "description": "Random text generator",
  "main": "./dist/",
  "module": "./dist/",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "lint": "xo --fix",
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch"
  },
  "author": "Dominic Birch <dominicbirch@outlook.com> ",
  "publisher": "Dominic Birch <dominicbirch@outlook.com> ",
  "homepage": "",
  "license": "MIT",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "vscode": "^1.32.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:text-generator.InsertSentence",
    "onCommand:text-generator.InsertParagraph",
    "onCommand:text-generator.CopySentence",
    "onCommand:text-generator.CopyParagraph",
    "onCommand:text-generator.ParseParagraphs",
    "onCommand:text-generator.ChangeTheme"
  ],
  "contributes": {
    "configuration": [
      {
        "title": "Text Generator",
        "properties": {
          "text-generator.customDataRoot": {
            "type": "string",
            "default": null,
            "description": "Defines a directory from which alternate source data will be loaded."
          },
          "text-generator.defaultTheme": {
            "type": "string",
            "oneOf": [
              "Alice in wonderland",
              "Lorem ipsum"
            ],
            "default": "Alice in wonderland",
            "description": "Defines the default source text."
          }
        }
      }
    ],
    "commands": [
      {
        "command": "text-generator.InsertSentence",
        "title": "Text Generator: Insert a random sentence at the current cursor position"
      },
      {
        "command": "text-generator.InsertParagraph",
        "title": "Text Generator: Insert a random paragraph at the current cursor position"
      },
      {
        "command": "text-generator.CopySentence",
        "title": "Text Generator: Copy a random sentence to the clipboard"
      },
      {
        "command": "text-generator.CopyParagraph",
        "title": "Text Generator: Copy a random paragraph to the clipboard"
      },
      {
        "command": "text-generator.ParseParagraphs",
        "title": "Text Generator: Parse and save a paragraph JSON file from plain text"
      },
      {
        "command": "text-generator.ChangeTheme",
        "title": "Text Generator: Change theme/source"
      }
    ]
  },
  "xo": {
    "envs": [
      "es2021",
      "node",
      "jest"
    ],
    "prettier": true
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "xo --fix"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.32.0",
    "lint-staged": "^11.1.2",
    "merge-options": "^3.0.4",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.2",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0",
    "xo": "^0.44.0"
  },
  "dependencies": {
    "glob": "^7.1.7",
    "remove": "^0.1.5"
  }
}